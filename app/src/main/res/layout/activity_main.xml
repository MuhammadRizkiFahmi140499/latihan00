<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:text="pertama"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="132dp"
        android:text="kedua"
        app:layout_constraintStart_toStartOf="@+id/btFirst"
        app:layout_constraintTop_toTopOf="@+id/btFirst"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="108dp"
        android:text="ketiga"
        app:layout_constraintStart_toStartOf="@+id/btSecond"
        app:layout_constraintTop_toTopOf="@+id/btSecond"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btForth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="108dp"
        android:text="keempat"
        app:layout_constraintStart_toStartOf="@+id/btThird"
        app:layout_constraintTop_toTopOf="@+id/btThird"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>